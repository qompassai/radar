{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowUserToGetAllRadarFiles",
      "Action": [
        "s3:GetObject"
      ],
      "Effect": "Allow",
      "Resource": [
        "arn:aws:s3:::plugins/radar_builtins/*",
        "arn:aws:s3:::plugins/radar_custom/*",
        "arn:aws:s3:::mlflow-tracking/artifacts/*",
        "arn:aws:s3:::workflow/*"
      ]
    },
    {
      "Sid": "AllowListingOfAllRadarFolders",
      "Action": [
        "s3:ListBucket"
      ],
      "Effect": "Allow",
      "Resource": [
        "arn:aws:s3:::mlflow-tracking",
        "arn:aws:s3:::plugins",
        "arn:aws:s3:::workflow"
      ]
    }
  ]
}
